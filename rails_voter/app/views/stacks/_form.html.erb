<%= form_for @stack do |f| %>
  <% if @stack.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stack.errors.count, "error") %> prohibited this stack from being saved:</h2>

      <ul>
      <% @stack.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <%= f.hidden_field :id, :value => generateID() %>
   
  </div>
  <div class="field">
    <%= f.label :"Choose from existing stacks" %><br />
    
    <%= collection_select(:stack, :id, Stack.all, :id, :name, :prompt => true) %><br /><br />

    <%= f.label :"Or create a new stack" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </div>
    <div class="field">
    <%= f.label :"Incorrect Answers (to be separated by ~)" %><br />
    <%= f.text_field :choices %>
  </div>
  <div class="actions">
    <%= f.submit %>
</div>

<% end %>